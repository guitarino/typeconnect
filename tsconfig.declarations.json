{
	"compilerOptions": {
		"target": "esnext",
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"strict": true,
		"emitDeclarationOnly": true,
		"declaration": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"declarationDir": "build"
	},
	"include": [
		"src"
	]
}